set ignorecase
set clipboard=unnamed
set novb

let mapleader="\<space>"

map X :q<CR>
nmap <leader>p :vsc Edit.GoToAll<CR>
nmap <C-P> :vsc Edit.GoToType<CR>
nmap gd :vsc Edit.GoToDefinition<CR>
nmap gD :vsc Edit.GoToDeclaration<CR>
nmap gi :vsc Edit.GoToImplementation<CR>
nmap gm :vsc Edit.GoToMember<CR>
nmap gr :vsc Edit.FindAllReferences<CR>
map gc :vsc Edit.CommentSelection<CR>

nmap <leader>rn :vsc Refactor.Rename<CR>
nmap <leader>rm :vsc Refactor.ExtractMethod<CR>
nmap <leader>fm :vsc Edit.FormatDocument<CR>
nmap - :vsc SolutionExplorer.SyncWithActiveDocument<CR>
nmap ]m :vsc Edit.NextMethod<CR>
nmap [m :vsc Edit.PreviousMethod<CR>

nmap <C-O> :vsc View.NavigateBackward<CR>
nmap <C-I> :vsc View.NavigateForward<CR>

nmap zl :so ~/.vsvimrc<CR>
