set ignorecase
set clipboard=unnamed

let mapleader="\<space>"


map gd :vsc Edit.GoToDefinition<CR>
map gD :vsc Edit.GoToDeclaration<CR>
map gi :vsc Edit.GoToImplementation<CR>
map gm :vsc Edit.GoToMember<CR>
map gr :vsc Edit.FindAllReferences<CR>
map gc :vsc Edit.ToggleLineComment<CR>
map <leader>rn :vsc Refactor.Rename<CR>
map <leader>rm :vsc Refactor.ExtractMethod<CR>
map - :vsc View.SolutionExplorer<CR>
map ] :vsc Edit.NextMethod<CR>
map [ :vsc Edit.PreviousMethod<CR>
map zl :so ~/.vsvimrc<CR>
